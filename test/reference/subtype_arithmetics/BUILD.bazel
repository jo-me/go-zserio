load("@io_bazel_rules_go//go:def.bzl", "go_test")
load("//:rules.bzl", "go_zserio_library")
load("//test/rules:rules.bzl", "py_zserio_library", "zs_payload")

go_zserio_library(
    name = "go_lib",
    srcs = [":schema.zs"],
    pkg = "subtype_arithmetics.schema",
    rootpackage = "gen/github.com/woven-planet/go-zserio/testdata",
)

py_zserio_library(
    name = "py_lib",
    outs = [
        "subtype_arithmetics/schema/__init__.py",
        "subtype_arithmetics/schema/api.py",
        "subtype_arithmetics/schema/colour.py",
        "subtype_arithmetics/schema/double_subtyped_float64.py",
        "subtype_arithmetics/schema/sub_type_arithmetics.py",
        "subtype_arithmetics/schema/subtyped_float64.py",
        "subtype_arithmetics/schema/subtyped_int32.py",
        "subtype_arithmetics/schema/subtyped_var_uint64.py",
    ],
    prefix = "testdata",
    proto = ":schema.zs",
)

zs_payload(
    name = "testdata",
    srcs = ["data.py"],
    out = "testdata.bin",
    deps = [":py_lib"],
)

go_test(
    name = "subtype_arithmetics",
    srcs = ["test.go"],
    data = [
        ":testdata",
    ],
    env = {
        "TESTDATA_BIN": "$(rootpath :testdata)",
    },
    deps = [
        ":go_lib",
        "//:go-zserio",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
        "@io_bazel_rules_go//go/tools/bazel:go_default_library",
    ],
)
